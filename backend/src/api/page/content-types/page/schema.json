{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": "Dynamic page management for all website pages"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    },
    "seo": {
      "enabled": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "translation_key": {
      "type": "uid",
      "required": true,
      "unique": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "page_type": {
      "type": "enumeration",
      "enum": [
        "home",
        "services",
        "about",
        "contact",
        "rfp",
        "insights",
        "works",
        "custom"
      ],
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "sections.hero",
        "sections.proof-bar",
        "sections.services-grid",
        "sections.case-carousel",
        "sections.testimonial-carousel",
        "sections.dynamic-content",
        "sections.playbook",
        "sections.cta-strip",
        "sections.rich-text",
        "sections.faq",
        "sections.metrics-grid",
        "sections.insights-list"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}
