{
  "collectionName": "components_sections_heroes",
  "info": {
    "displayName": "Hero",
    "description": "Hero section with eyebrow, heading, subheading, buttons and media"
  },
  "options": {},
  "attributes": {
    "eyebrow": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "heading": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "subheading": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "buttons": {
      "type": "component",
      "repeatable": true,
      "component": "ui.link-item"
    },
    "media": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "videos"]
    },
    "style_variant": {
      "type": "enumeration",
      "enum": ["default", "image_right", "image_left"],
      "default": "default"
    }
  }
}