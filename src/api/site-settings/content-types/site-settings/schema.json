      "type": "string",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false
    },
    "contact_email": {
      "type": "email"
    },
    "whatsapp": {
      "type": "string"
    },
    "socials": {
      "type": "component",
      "repeatable": true,
      "component": "ui.link-item"
    },
    "available_locales": {
      "type": "enumeration",
      "enum": ["id", "en"],
      "multiple": true,
      "default": ["id", "en"]
    }
  }
}