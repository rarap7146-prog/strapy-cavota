{
  "kind": "collectionType",
  "collectionName": "tags",
  "info": {
    "singularName": "tag",
    "pluralName": "tags",
    "displayName": "Tag",
    "description": "Lightweight taxonomy for work and insights"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true,
      "unique": true
    },
    "scope": {
      "type": "enumeration",
      "enum": [
        "work",
        "insight",
        "both"
      ],
      "required": true
    },
    "works": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::work.work",
      "mappedBy": "tags"
    },
    "insights": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::insight.insight",
      "mappedBy": "tags"
    }
  }
}